  email         String    @unique
  username      String    @unique
  password      String
  emailVerified DateTime?

  Profile           Profile?
  // sessions          Session[]
  // VerificationToken VerificationToken[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}

